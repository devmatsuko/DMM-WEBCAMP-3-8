<h1><strong>Editing Book</strong></h1>
<% if @book.errors.any? %>
  <div class=error-message>
    <h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= "Error:" + message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_with部分。/book/:id宛てにPatchメソッドを実行 -->
<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
  <div class="input">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="input">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show" , book_path(@book.id)  %> | <%= link_to "Back" , books_path %>