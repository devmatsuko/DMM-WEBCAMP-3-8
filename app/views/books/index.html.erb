<h1><strong>Books</strong></h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show" , book_path(book.id)  %></td>
        <td><%= link_to "Edit" ,  books_path %></td>
        <td><%= link_to "Destroy" , books_path  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2><strong>New book</strong></h2>
<!-- form_with部分。/books宛てにPOSTメソッドを実行 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <div class="input">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="input">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>
